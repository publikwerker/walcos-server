{
  "name": "walcos-server",
  "version": "1.0.0",
  "description": "'server for walter cosmopolis.com'",
  "main": "app.js",
  "scripts": {
    "start-dev": "nodemon index.js",
    "migrate": "npx sequelize-cli db:migrate",
    "migrate:reset": "npx sequelize-cli db:migrate:undo:all && npm run migrate",
    "test": "cross-env NODE_ENV=test jest --testTimeout=10000",
    "pretest": "cross-env NODE_ENV=test npm run migrate:reset"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/publikwerker/walcos-server.git"
  },
  "author": "Publikwerker",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/publikwerker/walcos-server/issues"
  },
  "homepage": "https://github.com/publikwerker/walcos-server#readme",
  "dependencies": {
    "express": "^4.17.1",
    "nodemon": "^2.0.0",
    "pg": "^7.14.0",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.21.2",
    "sequelize-cli": "^5.5.1"
  },
  "devDependencies": {
    "cross-env": "^6.0.3",
    "jest": "^24.9.0",
    "supertest": "^4.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
